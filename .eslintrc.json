{
  "extends": ["next/core-web-vitals", "prettier"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:@typescript-eslint/strict"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": true,
        "tsconfigRootDir": "./"
      }
    }
  ],
  "root": true
}
